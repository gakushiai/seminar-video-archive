rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // videosコレクションは誰でも読み取り可能、書き込みは管理者のみ
    match /videos/{videoId} {
      allow read: if true;
      allow write: if true;
    }
    
    // settingsコレクションのpasswordドキュメントのみアクセス可能
    match /settings/password {
      allow read, write: if true;
    }
    
    // admin_settingsコレクションのadmin_passwordドキュメントのみアクセス可能
    match /admin_settings/admin_password {
      allow read, write: if true;
    }
    
    // categoriesコレクションは誰でも読み書き可能
    match /categories/{categoryId} {
      allow read, write: if true;
    }
  }
} 